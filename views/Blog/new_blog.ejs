<%- include("../partial/header.ejs") %>
    <div class="container">
        <p>
            <div class="container ">
                <form action="/blog/saveblog" method="post">
                    <div class="container field-margin ">
                        <input type="text" name="btitle" class="blogformitem" placeholder="Blog title">
                    </div>
                    <div class="container field-margin">
                        <input type="text" name="bname" class="blogformitem" placeholder="Blog Name">
                    </div>
                    <div class="container field-margin">
                        <input type="file" name="bimage" value="upload your image" placeholder="upload your image">
                    </div>
                    <div class="container field-margin">
                        <textarea type="text" class="blogformtextarea" name="bcontent" placeholder="Content: "></textarea>
                    </div>
                    <div class="container field-margin">
                        <textarea type="text" name="bfootnote" class="blogformtextarea" placeholder="Blog Foot Note: "></textarea>
                    </div>
                    <div class="container field-margin">
                        <input type="text" name="bcreatedby" class="blogformitem" placeholder="Blog Created by: ">
                    </div>
                    <div class="container field-margin">
                        <input type="text" name="btag" class="blogformitem" placeholder="Blog Tags">
                    </div>
                    <div class="container field-margin">
                        <input type="text" name="bstatus" class="blogformitem" placeholder="Blog Status">
                    </div>
                    <div class="container field-margin">
                        <input type="submit" class="btn-sm" name="bsubmit" value="Submit">
                    </div>
                </form>
            </div>
        </p>
    </div>
    <%- include("../partial/footer.ejs") %>